<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTrackerApp.Views.StatementEarningsView">
  <ContentView.Content>
        <Frame HasShadow="False" CornerRadius="30" Padding="0"
               BackgroundColor="{StaticResource PrimaryHeaderColor}}">
            <StackLayout Orientation="Horizontal" Spacing="0"
                         Margin="10,0" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="$" FontSize="12" Margin="0,5,0,0" TextColor="White"/>
            <Label Text="10" FontSize="24" x:Name="DollarsLabel"  TextColor="White"/>
            <Label Text=".00" FontSize="12" x:Name="CentsLabel" Margin="0,5,0,0" TextColor="White"/>
        </StackLayout>
        </Frame>
  </ContentView.Content>
</ContentView>